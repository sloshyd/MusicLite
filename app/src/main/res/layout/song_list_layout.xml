<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <CheckBox
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/checkBox_playList"
        android:weightSum="1"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:clickable="false"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:textSize="12sp"
        android:text="SONG TITLE GOES HERE"
        android:id="@+id/text_song_name"
        android:textAlignment="textStart"
        android:singleLine="true"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_above="@+id/text_song_artist"
        android:layout_toEndOf="@id/checkBox_playList"
        android:clickable="false"
        android:focusable="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:singleLine="true"
        android:layout_height="25dp"
        android:textSize="12sp"
        android:text="ARTIST GOES HERE"
        android:id="@+id/text_song_artist"
        android:textAlignment="textStart"

        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_alignBottom="@+id/checkBox_playList"
        android:layout_toEndOf="@+id/checkBox_playList"
        android:clickable="false"
        android:focusable="false"/>

</RelativeLayout>